<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222227"
    tools:context=".ForgetPasswordActivity2">

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintEnd_toEndOf="@+id/imageBack"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toTopOf="@+id/imageBack" />

    <TextView
        android:id="@+id/textForget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:textColor="#FFFFFF"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <ImageView
        android:id="@+id/imageCodeForget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageNewPassForget1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textForget2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rectalngle_login" />

    <ImageView
        android:id="@+id/imageNewPassForget1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/imageNewPassForget2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rectalngle_login" />

    <ImageView
        android:id="@+id/imageNewPassForget2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rectalngle_login" />

    <Button
        android:id="@+id/buttonSendAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:text="Отправить ещё раз"
        android:textColor="#222227"
        app:layout_constraintBottom_toTopOf="@+id/buttonForgetPassNext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageNewPassForget2"
        app:layout_constraintVertical_bias="0.718" />

    <Button
        android:id="@+id/buttonForgetPassNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="192dp"
        android:backgroundTint="#D8D8D8"
        android:text="Далее"
        android:textColor="#222227"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editCodePassForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Введите код из письма"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageCodeForget2"
        app:layout_constraintEnd_toEndOf="@+id/imageCodeForget2"
        app:layout_constraintStart_toStartOf="@+id/imageCodeForget2"
        app:layout_constraintTop_toTopOf="@+id/imageCodeForget2" />

    <EditText
        android:id="@+id/editPassNew2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Повторите пароль"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageNewPassForget2"
        app:layout_constraintEnd_toEndOf="@+id/imageNewPassForget2"
        app:layout_constraintStart_toStartOf="@+id/imageNewPassForget2"
        app:layout_constraintTop_toTopOf="@+id/imageNewPassForget2" />

    <EditText
        android:id="@+id/editPassNew1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Новый пароль"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageNewPassForget1"
        app:layout_constraintEnd_toEndOf="@+id/imageNewPassForget1"
        app:layout_constraintStart_toStartOf="@+id/imageNewPassForget1"
        app:layout_constraintTop_toTopOf="@+id/imageNewPassForget1" />

</androidx.constraintlayout.widget.ConstraintLayout>