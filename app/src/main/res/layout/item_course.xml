<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:background="@drawable/rect_course_list_in_my_courses"
    tools:ignore="all">


    <TextView
        android:id="@+id/textNameCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название курса"
        android:textColor="#222227"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textDescCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Направление"
        android:textColor="#ACACAC"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewTimeIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@null"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/textTimeCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="длит"
            android:textColor="#ACACAC"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ч."
            android:textColor="#ACACAC"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSubscribeOnCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#222227"
        android:text="Подписаться"
        android:textColor="@android:color/white" />

</LinearLayout>
