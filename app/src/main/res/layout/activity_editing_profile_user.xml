<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222227"
    tools:context=".EditingProfileUserActivity">

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
        app:layout_constraintEnd_toEndOf="@+id/imageBack"
        app:layout_constraintStart_toStartOf="@+id/imageBack"
        app:layout_constraintTop_toTopOf="@+id/imageBack" />

    <TextView
        android:id="@+id/textProfileInMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Профиль"
        android:textColor="#D8D8D8"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageEditNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProfileInMyProfile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectalngle_login" />

    <ImageView
        android:id="@+id/imageEditSurnameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEditNameProfile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectalngle_login" />

    <ImageView
        android:id="@+id/imageEditMailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEditSurnameProfile"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectalngle_login" />

    <Button
        android:id="@+id/buttonEditProfileInEdittingPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:backgroundTint="#D8D8D8"
        android:text="Изменить"
        android:textColor="#222227"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageEditMailProfile"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextNameForEditting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Имя"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageEditNameProfile"
        app:layout_constraintEnd_toEndOf="@+id/imageEditNameProfile"
        app:layout_constraintStart_toStartOf="@+id/imageEditNameProfile"
        app:layout_constraintTop_toTopOf="@+id/imageEditNameProfile" />

    <EditText
        android:id="@+id/editTextSurnameForEditting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Фамилия"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageEditSurnameProfile"
        app:layout_constraintEnd_toEndOf="@+id/imageEditSurnameProfile"
        app:layout_constraintStart_toStartOf="@+id/imageEditSurnameProfile"
        app:layout_constraintTop_toTopOf="@+id/imageEditSurnameProfile" />

    <EditText
        android:id="@+id/editTextMailForEditting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D8D8D8"
        android:ems="10"
        android:inputType="text"
        android:text="Эл. почта"
        android:textColor="#ACACAC"
        app:layout_constraintBottom_toBottomOf="@+id/imageEditMailProfile"
        app:layout_constraintEnd_toEndOf="@+id/imageEditMailProfile"
        app:layout_constraintStart_toStartOf="@+id/imageEditMailProfile"
        app:layout_constraintTop_toTopOf="@+id/imageEditMailProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>